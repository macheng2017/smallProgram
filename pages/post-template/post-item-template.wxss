.user-avatar{
    width: 100%;
    height: 100rpx;
}
.user-avatar image{
    width:100rpx;
    height:100rpx;
    vertical-align: middle;
}
.user-avatar text{
    width:300rpx;
    vertical-align: middle;
}
.news{
    display: flex;
    flex-direction: column;
    margin-top:20rpx;
    margin-bottom:20rpx; 
    background-color:#fff;
    border-top: 1px solid #666;
    border-bottom: 1px solid #666;
    padding:10rpx 0 10rpx 0;
}

.news-content image{
    width: 100%;
    height:375rpx;
    margin: auto 0px;
}
.news-content-title{
    background-color:red;
    font-size:36rpx;
    font-weight: bold;
    color:black;
    text-indent: 20rpx;
}
.news-content text{
    font-size: 28rpx;
    letter-spacing: 2rpx;
    color:#666;
    line-height: 40rpx;
    margin:0 0 20rpx 20rpx;

}
.news-like{
    margin-top: 10px;
    flex-direction: row;
}
.news-like image{
    width:30rpx;
    height:30rpx;
    margin-left: 10rpx;
    margin-right:10rpx; 
    vertical-align: middle;
}
.news-like text{
    font-size: 30rpx;
    text-indent:40rpx; 
    margin-right: 30rpx;
    vertical-align: middle;
}



